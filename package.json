{
  "name": "prettypkg",
  "version": "1.1.2",
  "description": "A command-line utility to format package.json files consistently",
  "keywords": [
    "package",
    "formatter",
    "prettier"
  ],
  "license": "MIT",
  "author": "RÃ³bert Darida",
  "homepage": "https://rdarida.github.io/prettypkg/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdarida/prettypkg.git"
  },
  "bugs": {
    "url": "https://github.com/rdarida/prettypkg/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "./dist"
  ],
  "scripts": {
    "lint": "tsc",
    "prettier": "prettier . --check",
    "pretest": "rimraf ./coverage",
    "test": "jest",
    "prebuild": "rimraf ./dist",
    "build": "tsup ./src/index.ts ./src/cli.ts --format cjs --dts --minify",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin HEAD",
    "predocs": "rimraf ./docs",
    "docs": "typedoc"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/yargs": "^17.0.33",
    "jest": "^30.0.4",
    "jest-config": "^30.0.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typedoc": "^0.28.0",
    "typescript": "^5.7.2"
  }
}
